<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a Review:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="game_title">Game Title:</label>
        <input class="form-input" type="text" id="game_title" name="game_title" />
      </div>
      <div class="form-group">
        <label for="user_score">Rating:</label>
        <input class="form-input" type="number" id="user_score" name="user_score" />
      </div>
      <div class="form-group">
        <label for="Review">Review:</label>
        <textarea class="form-input" id="Review" name="Review"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if Review.length}}
  <div class="col-md-6 project-list">
    <h3>Current Reviews:</h3>

    {{#each Review as |Review|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{Review.id}}">{{Review.Review}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{Review.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
<script src="./js/game.js"></script>

