<!-- Loop over each object in the review array -->
{{#each Review as |Review| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/Review/{{Review.id}}">{{Review.user_name}}</a>
    </h2>
    <p>{{Review.Review}}</p>
    <p>Created by {{Review.user_name}} on {{format_date Review.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      Rating:{{Review.user_score}}/10.
    </p>
  </div>
</div>
{{/each}}
